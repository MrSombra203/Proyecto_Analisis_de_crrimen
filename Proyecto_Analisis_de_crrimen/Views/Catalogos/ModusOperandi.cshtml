@model IEnumerable<Proyecto_Analisis_de_crimen.Models.ModusOperandi>

@{
    ViewData["Title"] = "Modus Operandi";
}

<div class="page-header">
    <h2>GESTIÓN DE MODUS OPERANDI</h2>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>¡Éxito!</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="CrearModusOperandi" class="btn btn-primary">Nuevo Modus Operandi</a>
    <a asp-controller="Catalogos" asp-action="TiposCrimen" class="btn btn-secondary">Gestionar Tipos de Crimen</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Fecha Creación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><strong>@item.Nombre</strong></td>
                        <td>@(item.Descripcion ?? "Sin descripción")</td>
                        <td>
                            @if (item.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </td>
                        <td>@item.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="EditarModusOperandi" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                            <form asp-action="DesactivarModusOperandi" asp-route-id="@item.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm @(item.Activo ? "btn-danger" : "btn-success")">
                                    @(item.Activo ? "Desactivar" : "Activar")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No hay modus operandi registrados</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .page-header {
        border-bottom: 2px solid #1a3a52;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .page-header h2 {
        color: #1a3a52;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .thead-dark {
        background-color: #1a3a52;
        color: white;
    }

    .btn-primary {
        background-color: #1a3a52;
        border-color: #2c5aa0;
    }

    .btn-primary:hover {
        background-color: #2c5aa0;
    }
</style>

