@model IEnumerable<Proyecto_Analisis_de_crimen.Models.EscenaCrimen>

@{
    ViewBag.Title = "Escenas del Crimen";
}

<div class="page-header">
    <h2>REGISTRO DE ESCENAS DEL CRIMEN</h2>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>¡Éxito!</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>¡Error!</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Registrar" class="btn btn-primary">Registrar Nueva Escena</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Fecha Crimen</th>
                <th>Ubicación</th>
                <th>Tipo</th>
                <th>Área</th>
                <th>Modus Operandi</th>
                <th>Horario</th>
                <th>Evidencias</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FechaCrimen.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.Ubicacion</td>
                        <td>@(item.TipoCrimen?.Nombre ?? "N/A")</td>
                        <td>@item.AreaGeografica.ToString()</td>
                        <td>@(item.ModusOperandi?.Nombre ?? "N/A")</td>
                        <td>@item.HorarioCrimen.ToString()</td>
                        <td>@(item.Evidencias != null ? item.Evidencias.Count : 0)</td>
                        <td>
                            <a asp-action="Resultados" asp-route-id="@item.Id" class="btn btn-sm btn-info">Ver Similares</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center">No hay escenas registradas</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .page-header {
        border-bottom: 2px solid #1a3a52;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

        .page-header h2 {
            color: #1a3a52;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

    .thead-dark {
        background-color: #1a3a52;
        color: white;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .btn-primary {
        background-color: #1a3a52;
        border-color: #2c5aa0;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 0.3px;
    }

        .btn-primary:hover {
            background-color: #2c5aa0;
            border-color: #3a6bb5;
        }

    .btn-info {
        background-color: #2c5aa0;
        border-color: #2c5aa0;
    }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

    .btn-close {
        float: right;
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1;
        color: #000;
        text-shadow: 0 1px 0 #fff;
        opacity: .5;
        background: transparent;
        border: 0;
        cursor: pointer;
    }

        .btn-close:hover {
            opacity: .75;
        }
</style>