@model List<Proyecto_Analisis_de_crimen.Models.ComparacionResultado>

@{
    ViewBag.Title = "Escenas Similares";
    var escenaBase = ViewBag.EscenaBase as Proyecto_Analisis_de_crimen.Models.EscenaCrimen;
}

<div class="results-container">
    <div class="results-header">
        <h2>ESCENAS SIMILARES DETECTADAS - ANÁLISIS DE PATRONES</h2>
    </div>

    <div class="results-body">
        @if (escenaBase != null)
        {
            <div class="base-scene-info">
                <h4>ESCENA BASE: #@escenaBase.Id</h4>
                <div class="base-scene-details">
                    <span><strong>Fecha:</strong> @escenaBase.FechaCrimen.ToString("dd/MM/yyyy HH:mm")</span>
                    <span><strong>Ubicación:</strong> @escenaBase.Ubicacion</span>
                    <span><strong>Tipo:</strong> @(escenaBase.TipoCrimen?.Nombre ?? "N/A")</span>
                    <span><strong>Área:</strong> @escenaBase.AreaGeografica</span>
                </div>
            </div>
        }

        @if (Model != null && Model.Any())
        {
            <div class="results-grid">
                @foreach (var resultado in Model)
                {
                    var badgeClass = resultado.Clasificacion == Proyecto_Analisis_de_crimen.Models.ClasificacionCrimen.CrimenEnSerie ? "badge-danger" :
                    resultado.Clasificacion == Proyecto_Analisis_de_crimen.Models.ClasificacionCrimen.ConexionProbable ? "badge-warning" : "badge-secondary";

                    var clasificacionTexto = resultado.Clasificacion == Proyecto_Analisis_de_crimen.Models.ClasificacionCrimen.CrimenEnSerie ? "CRIMEN EN SERIE" :
                    resultado.Clasificacion == Proyecto_Analisis_de_crimen.Models.ClasificacionCrimen.ConexionProbable ? "CONEXIÓN PROBABLE" : "SIMILITUD BAJA";

                    <div class="result-card">
                        <div class="result-card-header">
                            <div class="result-title">
                                Escena #@resultado.EscenaComparada.Id - @(resultado.EscenaComparada.TipoCrimen?.Nombre ?? "N/A")
                            </div>
                            <span class="classification-badge @badgeClass">@clasificacionTexto</span>
                        </div>
                        <div class="result-card-body">
                            <div class="similarity-indicator">
                                <div class="similarity-label">Índice de Similitud:</div>
                                <div class="similarity-value">@resultado.PorcentajeSimilitud.ToString("F2")%</div>
                            </div>

                            <div class="scene-info">
                                <p><strong>Fecha:</strong> @resultado.EscenaComparada.FechaCrimen.ToString("dd/MM/yyyy HH:mm")</p>
                                <p><strong>Ubicación:</strong> @resultado.EscenaComparada.Ubicacion</p>
                                <p><strong>Área:</strong> @resultado.EscenaComparada.AreaGeografica</p>
                                <p><strong>Modus Operandi:</strong> @(resultado.EscenaComparada.ModusOperandi?.Nombre ?? "N/A")</p>
                            </div>

                            @if (resultado.Coincidencias.Any())
                            {
                                <div class="coincidences">
                                    <strong>Coincidencias:</strong>
                                    @foreach (var coincidencia in resultado.Coincidencias)
                                    {
                                        <div class="coincidence-item">▪ @coincidencia</div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-results">
                <div class="no-results-icon">⚠</div>
                <h3>No se encontraron escenas similares</h3>
                <p>No existen escenas registradas con un índice de similitud mayor al 60% con la escena base seleccionada.</p>
            </div>
        }

        <div class="actions-panel">
            <a href="@Url.Action("Comparar")" class="btn-uiverse">NUEVA COMPARACIÓN</a>
            <a href="@Url.Action("Index")" class="btn-uiverse" style="background-color: #6c757d !important; text-decoration: none;">VER TODAS LAS ESCENAS</a>
        </div>
    </div>
</div>

