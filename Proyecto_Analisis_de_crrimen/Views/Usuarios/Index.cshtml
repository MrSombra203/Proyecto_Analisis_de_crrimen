@model IEnumerable<Proyecto_Analisis_de_crimen.Models.Usuario>

@{
    ViewData["Title"] = "Gesti√≥n de Usuarios";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-3">
                üë• Gesti√≥n de Usuarios
            </h2>
            <p class="text-muted">Administra los usuarios del sistema. Solo los administradores pueden acceder a esta secci√≥n.</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            ‚úÖ @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            ‚ö†Ô∏è @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-12">
            <a asp-action="Crear" class="btn btn-primary">
                ‚ûï Crear Nuevo Usuario
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header text-white" style="background-color: #1a3a52 !important; border-bottom: 2px solid #2c5aa0 !important;">
            <h5 class="mb-0">Lista de Usuarios</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre de Usuario</th>
                            <th>Nombre Completo</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th>Fecha Creaci√≥n</th>
                            <th>√öltimo Acceso</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td><strong>@item.NombreUsuario</strong></td>
                                    <td>@item.NombreCompleto</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <span class="badge @(item.RolId == 1 ? "bg-danger" : "bg-info")">
                                            @(item.Rol?.Nombre ?? "Sin rol")
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td>@item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (item.UltimoAcceso.HasValue)
                                        {
                                            @item.UltimoAcceso.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Nunca</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                                ‚úèÔ∏è Editar
                                            </a>
                                            <form asp-action="Desactivar" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('¬øEst√°s seguro de que deseas @(item.Activo ? "desactivar" : "activar") este usuario?');">
                                                @Html.AntiForgeryToken()
                                                @if (item.Activo)
                                                {
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Desactivar">
                                                        üö´ Desactivar
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-sm btn-success" title="Activar">
                                                        ‚úÖ Activar
                                                    </button>
                                                }
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">
                                    <p class="mb-0">No hay usuarios registrados en el sistema</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                ‚Üê Volver al Inicio
            </a>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn-group .btn {
        margin-right: 5px;
    }

    .btn-group .btn:last-child {
        margin-right: 0;
    }
</style>





